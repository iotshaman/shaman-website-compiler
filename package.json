{
  "name": "shaman-website-compiler",
  "version": "3.0.0",
  "description": "Generate website scaffolding in seconds. Compile to output with the CLI or compile to Express JS routes with Node JS. Built with SEO in mind.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Kyle Brown",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/html-minifier": "^3.5.2",
    "@types/mocha": "5.2.5",
    "@types/node": "10.5.8",
    "@types/node-dir": "0.0.32",
    "@types/sinon-chai": "^3.2.0",
    "chai": "4.1.2",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "mocha": "5.2.0",
    "nyc": "^12.0.2",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.0.5",
    "sinon-mongoose": "^2.2.1",
    "ts-node": "7.0.1"
  },
  "dependencies": {
    "clean-css": "^4.1.11",
    "fast-glob": "2.2.2",
    "fs-extra": "7.0.0",
    "gaze": "1.1.3",
    "handlebars": "4.0.11",
    "html-minifier": "^3.5.21",
    "inversify": "^4.13.0",
    "node-object-hash": "1.4.1",
    "promise": "8.0.1",
    "reflect-metadata": "^0.1.12",
    "typescript": "3.0.1",
    "uglify-es": "3.3.9"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.js",
      "coverage/*",
      "dist/*",
      "**/*.mock.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  }
}
